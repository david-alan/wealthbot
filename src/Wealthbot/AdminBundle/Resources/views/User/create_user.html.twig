{% extends 'WealthbotAdminBundle::layout.html.twig' %}

{% block body %}
    {% block form_title %}<h3>Create user</h3>{% endblock %}
    <form class="form-horizontal" action="" method="post">
        {{ form_errors(createAdminUserForm) }}
        <div class="row">
            <div class="control-group span7">
                <div class="row-fluid">
                    <div class="span5">
                        {{ form_label(createAdminUserForm.profile.first_name, 'First Name:', { 'label_attr': { 'class': 'control-label' } }) }}
                        <div class="controls">
                            {{ form_errors(createAdminUserForm.profile.first_name) }}
                            {{ form_widget(createAdminUserForm.profile.first_name, {'attr': { 'class': 'input-small' } }) }}
                        </div>
                    </div>
                    <div class="span7 margin-left-0">
                        {{ form_label(createAdminUserForm.profile.last_name, 'Last Name:', { 'label_attr': { 'class': 'control-label width-90' } }) }}
                        <div class="controls margin-left-100">
                            {{ form_errors(createAdminUserForm.profile.last_name) }}
                            {{ form_widget(createAdminUserForm.profile.last_name, {'attr': { 'class': 'input-small' } }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            {% if createAdminUserForm.email is defined %}
                <div class="control-group">
                    {{ form_label(createAdminUserForm.email, 'Email:', { 'label_attr': { 'class': 'control-label' } }) }}
                    <div class="controls">
                        {{ form_errors(createAdminUserForm.email) }}
                        {{ form_widget(createAdminUserForm.email) }}
                    </div>
                </div>
            {% endif %}
            <div class="control-group">
                {{ form_label(createAdminUserForm.plainPassword.first, null, { 'label_attr': { 'class': 'control-label' } }) }}
                <div class="controls">
                    {{ form_errors(createAdminUserForm.plainPassword.first) }}
                    {{ form_widget(createAdminUserForm.plainPassword.first) }}
                </div>
            </div>
            <div class="control-group">
                {{ form_label(createAdminUserForm.plainPassword.second, null, { 'label_attr': { 'class': 'control-label' } }) }}
                <div class="controls">
                    {{ form_errors(createAdminUserForm.plainPassword.second) }}
                    {{ form_widget(createAdminUserForm.plainPassword.second) }}
                </div>
            </div>
            <div class="control-group">
                {{ form_label(createAdminUserForm.level, 'Level:', { 'label_attr': { 'class': 'control-label' } }) }}
                <div class="controls">
                    {{ form_errors(createAdminUserForm.level) }}
                    {{ form_widget(createAdminUserForm.level) }}
                </div>
            </div>
            <div>
                {{ form_rest(createAdminUserForm) }}
            </div>
            <div class="form-actions">
                {% block form_actions %}
                    <a class="btn" href="{{ path('rx_admin_users') }}">Back</a>
                    <input class="btn-primary btn" type="submit" value="Create">
                {% endblock %}
            </div>
        </div>
    </form>
{% endblock %}
